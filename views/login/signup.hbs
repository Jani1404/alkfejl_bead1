{{#each errorMessages}}
<div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Regisztráció</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group">
            <label for="vezeteknev" class="col-lg-2 control-label">Vezetéknév</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="vezeteknev" name="vezeteknev">
            </div>
        </div>
        <div class="form-group">
            <label for="keresztnev" class="col-lg-2 control-label">Keresztnév</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="keresztnev" name="keresztnev">
            </div>
        </div>
        <div class="form-group">
            <label for="felhasznev" class="col-lg-2 control-label">Felhasználónév</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="felhasznev" name="felhasznev">
            </div>
        </div>
        <div class="form-group">
            <label for="jelszo" class="col-lg-2 control-label">Jelszó</label>
            <div class="col-lg-10">
                <input class="form-control" type="jelszo" id="jelszo" name="jelszo">
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-primary">Regisztrálás</button>
            </div>
        </div>
    </fieldset>
</form>
