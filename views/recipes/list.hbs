{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header"><h2>Az elérhető receptek listája</h2></div>

{{#each recipes}}
<table class="table table-striped table-hover ">
    <thead>
        <tr style="border: 2px solid #B22222">
            <th>{{nev}} ({{allapotText}})</th>
            <th><span style="float: right">Beküldve({{user}}.user által): {{date}} [<a href="/recipes/edit/{{id}}">SZERKESZT</a>][<a href="/delete/{{id}}">TÖRÖL</a>]</span></th>
        </tr>   
    </thead>
    <tbody>
        <tr style="border: 2px solid #B22222">
            <td colspan="2">{{elkeszites}}</td>
        </tr>
    </tbody>
</table>
{{/each}}
<p><a href="/recipes/new" class="btn btn-default">Új recept beküldése</a></p>